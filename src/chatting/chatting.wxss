  height: 30px;
  /* font-size: 28rpx; */
  background-color: #fff;
  color: #000;
  border-radius: 12px;
  /* border: 1px solid black; */
  /* outline: none; */
}


.rotate {
   
  animation: rotate 1s infinite linear;
  /* color:red; */

  /* max-width: 70vw;  */
    
  word-wrap: break-word; /*自动换行 */
  white-space: pre-wrap;
  word-break: break-all;

  max-width: 70%;
  margin: 10rpx;
  padding: 10rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  line-height: 1.5; 

  background: #f3f3f3;
  color: #333;
  align-self: flex-start;
  margin-right: 30%;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}