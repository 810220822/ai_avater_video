@import "../../app.wxss";

.container{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
  /* background-color: red; */
}
.display{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  width: 100%;
  /* height: calc(100vh - 120rpx); */
  padding: 20rpx;
  box-sizing: border-box;
  overflow-y: auto;
  /* background-color:violet; */
} 
.message-item {
  max-width: 70%;
  margin: 10rpx;
  padding: 10rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  line-height: 1.5; 
}
.message-content {
  max-width: 70vw; 
    
   word-wrap: break-word; /*自动换行 */
   white-space: pre-wrap;
   word-break: break-all;
}
.message-item.user {
  background: #5f75bc;
  color: #fff;
  align-self: flex-end;
  margin-left: 30%;
} 
.message-item.assistant {
  background: #f3f3f3;
  color: #333;
  align-self: flex-start;
  margin-right: 30%;
  /* animation: rotate 1s infinite linear; */
}
.chat-box {
   
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  width: 100%;
  height: calc(100vh - 120rpx);
  padding: 20rpx;
  box-sizing: border-box;
  overflow-y: auto;
}
.input-box2{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: left;
  width: 100%;
  /* min-height: 100rpx; */
  box-sizing: border-box;
  padding: 10rpx;
  background-color: #fff;
  position: fixed;
  bottom: 8px;
  /* background-color: blue; */
}
.input-box {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%; 
  box-sizing: border-box;
  padding: 10rpx;
  background-color: #fff;
  /* position: fixed;
  bottom: 8px; */
}
.input-items{
  display: flex;
  flex-direction: row;
}
.input2{
  /* white-space: nowrap; */
  display: flex;
  /* align-items: center; */
